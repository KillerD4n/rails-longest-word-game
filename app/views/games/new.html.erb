<h1>Your letters are...</h1>

<div>
  <ul>
    <% @letters.each do |letter| %>
    <li class="list-inline"><%=letter%></li>
    <% end %>
  </ul>
</div>

<div>
  <h2>What is the longest word you can make?</h2>
  <form action="/score" method="post">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
     <%= hidden_field_tag :grid, @letters.join.downcase %>
    <input type="text" name="word" placeholder="Longest word?">
    <input type="submit" value="Play!">
  </form>
</div>
